<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="@string/settings_search_term_def_value"
        android:key="@string/settings_search_term_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_search_term_label" />

    <ListPreference
        android:defaultValue="@string/settings_order_by_most_recent_def_value"
        android:entries="@array/settings_order_by_labels"
        android:entryValues="@array/settings_order_by_values"
        android:key="@string/settings_order_by_key"
        android:title="@string/settings_order_by_label" />
</PreferenceScreen>